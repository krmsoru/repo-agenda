<%-include('includes/head')%>
  <%-include('includes/nav')%>

    <div class="container">
      <div class="row">
        <div class="cow-lg-2"></div>


        <div class="cow-lg-8 my-3">
          <h1 class="text-center">Criar conta ou Entrar</h1>
          <p class="text-center lead">Faça login ou crie sua conta abaixo.</p>

          <div class="row">
            <%- include('includes/messages')%>
            
            <div class="col-lg my-5">
              <h4>Faça seu cadastro</h1>

                <p>Se você ainda não tem conta, preencha o formulário abaixo.</p>


                  <form class="form-cadastro" action="/login/register" method="post">
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                    <div class="form-group">
                      <label>Seu email</label>
                      <input type="email" class="form-control" name="email">
                    </div>

                    <div class="form-group">
                      <label>Senha</label>
                      <input type="password" class="form-control" name="password">
                    </div>

                    <button type="submit" class="btn btn-primary my-2">Cadastrar</button>

                  </form>

            </div>

            <div class="col-lg my-5">
              <h4>Faça seu login</h1>

                <p>Caso ja possua uma conta, faça seu login logo abaixo.</p>

                <form class="form-login"  action="/login/login" method="post">
                  <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                  <div class="form-group">
                    <label>Seu email</label>
                    <input type="email" class="form-control" name="email">
                  </div>

                  <div class="form-group">
                    <label>Senha</label>
                    <input type="password" class="form-control" name="password">
                  </div>
                  <button type="submit" class="btn btn-primary my-2">Entrar</button>
                </form>
            </div>

          </div>

        </div>

        <div class="cow-lg-2"></div>
      </div>
    </div>

    <%-include('includes/footer')%>